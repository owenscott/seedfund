      <!-- About Section -->
      {% block 'about' %}

        {% capture section_heading %}
          {% editable_text 'Header Text', format: 'raw', rows: 1, hint: 'Title for about section' %}
            About
          {% endeditable_text %}
        {% endcapture %}
        {% capture section_sub_heading %}
